{
    "name": "omnifyjp/pkg-omnify-laravel-core",
    "description": "Core Package for Laravel - Organizations, branches, brands, locations, IAM, auth, and admin CRUD with Omnify schema-driven development",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "core",
        "authentication",
        "authorization",
        "roles",
        "permissions",
        "omnify",
        "composer-plugin",
        "auto-discovery"
    ],
    "authors": [
        {
            "name": "Omnify Team",
            "email": "dev@omnify.jp"
        }
    ],
    "homepage": "https://github.com/omnify-jp/pkg-omnify-laravel-core",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "laravel/socialite": "^5.12"
    },
    "require-dev": {
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/pint": "^1.0",
        "laravel/sanctum": "^4.2",
        "lcobucci/jwt": "^5.6",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-query-builder": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Omnify\\Core\\": "app/",
            "Omnify\\Core\\Database\\Factories\\": "database/factories/",
            "Omnify\\Core\\Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Omnify\\Core\\Tests\\": "tests/"
        }
    },
    "extra": {
        "omnify": {
            "schemas": "database/schemas",
            "namespace": "Sso",
            "priority": 50,
            "options": {
                "generateMigrations": true,
                "generateModels": true,
                "modelNamespace": "Omnify\\Core\\Models",
                "migrationsPath": "database/migrations/omnify",
                "factoriesPath": "database/factories"
            }
        },
        "laravel": {
            "providers": [
                "Omnify\\Core\\CoreServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
